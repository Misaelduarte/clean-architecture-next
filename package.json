{
  "name": "next-template",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=16.13.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn check-types",
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "check-types": "bash -c tsc --noEmit",
    "eslint": "eslint 'src/**/*.{ts,tsx}'",
    "eslint:check-conflicting-rules": "npx eslint-config-prettier src/**/*.{ts,tsx}",
    "stylelint": "stylelint 'src/**/*.scss'",
    "stylelint:check-conflicting-rules": "stylelint-config-prettier-scss-check",
    "format": "prettier --write 'src/**/*.{ts,tsx,scss}'",
    "lint": "yarn check-types && yarn eslint && yarn stylelint && yarn format",
    "lint:fix": "yarn check-types && yarn eslint --fix && yarn stylelint --fix && yarn format",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "classnames": "^2.3.2",
    "focus-trap-react": "^10.0.0",
    "humps": "^2.0.1",
    "next": "12.3.0",
    "react": "18.2.0",
    "react-cookie": "^4.1.1",
    "react-dom": "18.2.0",
    "react-input-mask": "^2.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@faker-js/faker": "^7.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/humps": "^2.0.2",
    "@types/jest": "^29.0.2",
    "@types/node": "18.7.18",
    "@types/react": "18.0.20",
    "@types/react-dom": "18.0.6",
    "@types/react-input-mask": "2.0.4",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "8.23.1",
    "eslint-config-next": "12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-scss-transform": "^1.0.3",
    "lint-staged": "^13.0.3",
    "next-compose-plugins": "^2.2.1",
    "next-react-svg": "^1.1.3",
    "prettier": "2.7.1",
    "sass": "^1.54.9",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^5.0.0",
    "svg-jest": "^1.0.1",
    "ts-jest": "^29.0.1",
    "typescript": "4.8.3"
  }
}
